<h1>Grams#index</h1>
<% @grams.each do |gram| %>
    <div>
<img src="<%= (url_for(gram.image)) %>"><br>
By <%= User.find(gram.user_id).username %><br>
<p><%= gram.description %></p>
<% @comments = Comment.all.select { |c| c.gram_id == gram.id } %>
<ul>
<% @comments.each do |comment| %>
    <li><%= comment.content %> by <%= User.find(comment.user_id).username %></li>
    <% end %>
</ul>
<%= form_for @comment do |f| %> 
    <%= f.label :content, "Comment" %><br />
    <%= f.text_field :content %>
    <%= f.hidden_field(:gram_id, value: gram.id) %>
    <%= f.submit "Post" %>
    <% end %>
</div>
<% end %>

